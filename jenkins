pipeline {
 agent any
    stages {
      parallel {
        stage('BUILD') {
            steps {
             sh "mvn clean install"
                echo 'build is successfully completed'
             }
        }
              stage('TEST') {
                steps {
                 sh "mvn test"
                  echo 'test is successfull'
           }
       }
}
        stage('DEPLOYMENT') {
            steps {
                echo 'DEPLOYMENT IS SUCCESSFULL'
           }
        }
    }
}
