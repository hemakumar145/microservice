pipeline {
   agent any
     stages {
        stage('BUILD') {
            steps {
             sh "mvn clean install"
                echo 'build is successfully completed'
             }
        }
            stage ('parallel') {
             parallel {
               stage('TEST') {
                 agent { [ 'linux'] }
                    steps {
                     sh "mvn test"
                     echo 'test is successfull'
           }
       }
               stage('DEPLOYMENT') {
                 agent any
                   steps {
                     echo 'DEPLOYMENT IS SUCCESSFULL'
}
}
}
}
}
}
